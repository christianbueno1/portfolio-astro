---
import Card from "./Card/index.astro";
import { PERSONAL_INFO } from "../data";

const { contact, location } = PERSONAL_INFO;
const { cta, socialMedias } = PERSONAL_INFO.letsConnect
const { linkedin, github, devto, hashnode } = socialMedias;
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-white text-xl font-bold">
        {cta}
      </h1>
    </header>
    <address class="flex flex-col mt-4">
      <h2 class="text-gray-500">Contact Details</h2>
      <p><a class="hover:text-neutral-400" href={`mailto:${contact.email}`}>{contact.email}</a></p>
      <p>{location.country}</p>
    </address>
    <div class="flex flex-col mt-4 w-fit">
      <h2 class="text-gray-500">Socials</h2>
      <ul>
        <li>
          <a class="hover:text-neutral-400" href={`${linkedin.url}`} target="_blank">{linkedin.name}</a>
        </li>
        <li>
          <a class="hover:text-neutral-400" href={`${github.url}`} target="_blank">{github.name}</a>
        </li>
        <li>
          <a class="hover:text-neutral-400" href={`${devto.url}`} target="_blank">{devto.name}</a>
        </li>
        <li>
          <a class="hover:text-neutral-400" href={`${hashnode.url}`} target="_blank">{hashnode.name}</a>
        </li>
      </ul>
    </div>
  </div>
</Card>
